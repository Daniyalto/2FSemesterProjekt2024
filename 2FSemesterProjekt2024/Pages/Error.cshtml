@page
@model _2FSemesterProjekt2024.Pages.ErrorModel
@{
    ViewData["Title"] = "Error";
}

<h1 class="text-danger">Error</h1>
<h2 class="text-danger">An error occurred while processing your request.</h2>

@if (Model.ShowRequestId)
{
    <p>
        <strong>Request ID:</strong> <code>@Model.RequestId</code>
    </p>
}

@if (Environment.GetEnvironmentVariable("ASPNETCORE_ENVIRONMENT") == "Development")
{
    <h3>Development Mode</h3>
    <p>
        Detailed information about the error is shown when the application is in <strong>Development</strong> mode.
    </p>
    <p>
        <strong>Warning:</strong> The Development environment shouldn't be enabled for deployed applications, as it may expose sensitive information.
    </p>
    <p>
        To enable development mode for local debugging, set the <strong>ASPNETCORE_ENVIRONMENT</strong> environment variable to <strong>Development</strong> and restart the app.
    </p>
}
else
{
    <h3>Production Mode</h3>
    <p>
        We apologize, but an unexpected error occurred. Please try again later, or contact support if the issue persists.
    </p>
}