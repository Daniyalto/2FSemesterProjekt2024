@page
@model _2FSemesterProjekt2024.Pages.Auth.LoginModel

<form method="post">
    <div>
        <label>Email:</label>
        <input asp-for="Email" type="email" required />
    </div>
    <div>
        <label>Password:</label>
        <input asp-for="Password" type="password" required />
    </div>
    <button type="submit">Login</button>
</form>

@if (!ModelState.IsValid)
{
    <p style="color: red;">Invalid email or password. Please try again.</p>
}
